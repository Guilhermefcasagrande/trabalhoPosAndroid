<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/img_cell"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_cell"
        tools:text="Nome do Produto"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/label_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_name"
        android:layout_toRightOf="@id/img_cell"
        tools:text="Aqui estará a descrição do produto"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/label_avaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_cell"
        tools:text="10"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="8dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/label_disponibilidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_descricao"
        android:layout_toRightOf="@id/img_cell"
        tools:text="Disponível"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="15dp"/>

</RelativeLayout>